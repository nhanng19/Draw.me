<body class="additionalBody">
  <section class="paint">
    <div id="toolbar">
      <label for="stroke">COLOR</label>
      <input
        type="color"
        oninput="strokeColor = this.value"
        placeholder="Colors"
      />
      <label for="stroke">SIZE</label>
      <input
        type="range"
        min="1"
        max="100"
        value="1"
        oninput="strokeWidth = this.value"
      />
      <button onclick="Restore()">UNDO</button>
      <button onclick="Clear()">CLEAR</button>
      <button onclick="Post()">POST</button>
      <button onclick="Png()">SAVE</button>
    </div>
    <div class="drawing-container">

        <canvas id="canvas"></canvas>

      <div class="gallery">
        <div class="relative place-items-center">
          <div
            class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none"
          >
            <svg
              aria-hidden="true"
              class="w-5 h-5 text-gray-500 dark:text-gray-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
              ></path></svg>
          </div>
          <input
            type="search"
            spellcheck="false"
            class="search block w-full p-4 pl-10 text-sm text-white border border-gray-300 bg-black focus:ring-white focus:border-white dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-white dark:focus:border-white"
            placeholder="Mona Lisa, Vincent Van Gogh, The Scream, etc."
            required
          />
        </div>

        <div
          id="message"
          class="grid h-screen place-items-center px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20"
        >
          <div
            class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12"
          >
            <h2
              class="max-w-lg mb-6 font-sans text-3xl font-bold leading-none tracking-tight text-white sm:text-4xl md:mx-auto"
            >
              Search for a painting to start.
            </h2>
          </div>
        </div>

        <img id="image" alt="" src="" />
      </div></div>

  </section>
</body>

<script src="./js/button.js"></script>
<script src="./js/paint.js"></script>