<div class="bg-black lg:block w-full  h-screen">
        <div class="grid h-screen place-items-center px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
              <div class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
                <h2 class="max-w-lg mb-6 font-sans text-3xl font-bold leading-none tracking-tight text-white sm:text-4xl md:mx-auto">
                  YOUR ART
                </h2>
 </div>
      <div class="container flex flex-col md:grid md:grid-cols-3 gap-4 mx-auto">
      {{#each drawings as |drawing|}}
        <div class="w-full h-128 info images">
          <a href="/"><img src="{{link}}" alt="image" class="w-full h-full rounded-md object-cover"></a>
